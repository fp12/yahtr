##:include yahtr/ui/kv/debug.kv
#: import L_MENU_MAIN_MENU yahtr.localization.ids.L_MENU_MAIN_MENU

<Credits>:
    FloatLayout:
        Label:
            text: 'Yet Another Hex Tactical RPG'
            pos_hint: {'center_x': .5, 'y': .75}
            size_hint: None, None
            halign: 'center'
            font_size: '50sp'
        Label:
            text: root.credits_text
            pos_hint: {'center_x': .5, 'y': .5}
            size_hint: None, None
            halign: 'center'
            markup: True
            on_ref_press:
                import webbrowser
                webbrowser.open(args[1])
        Button:
            text: _(L_MENU_MAIN_MENU)
            on_press: app.go_to_main_menu()
            pos: -50, -50
            pos_hint: {'right': 1, 'top': 1}
            size: 100, 25
            size_hint: None, None
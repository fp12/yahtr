#:include yahtr/ui/kv/selectable_label.kv
#:include yahtr/ui/kv/board_editor.kv


<ActionsTreesTPI@TabbedPanelItem>
    text: 'Actions Trees'
    title: title

    RstDocument:
        id: title
        text: ''


<SkillsTPI@TabbedPanelItem>
    text: 'Skills'
    HexGrid


<WeaponsTPI@TabbedPanelItem>
    text: 'Weapons'


<UnitsTPI@TabbedPanelItem>
    text: 'Units'
    HexGrid


<BattleSetupsTPI@TabbedPanelItem>
    text: 'Battle setups'
    HexGrid


<EditorTP@TabbedPanel>:
    ActionsTreesTPI:
        id: actions_trees        

    SkillsTPI:
        id: skills      
        
    WeaponsTPI:
        id: weapon_templates
        
    UnitsTPI:
        id: unit_templates
        
    BoardEditor:
        id: board_templates
        
    BattleSetupsTPI:
        id: battle_setups


<Editor>:
    rv: rv
    rv_layout: rv_layout
    tp: tp

    Button:
        text: 'Main Menu'
        on_press: app.go_to_main_menu()
        pos_hint: {'right': 1, 'top': 1}
        size: 100, 25
        size_hint: None, None

    RecycleView:
        id: rv
        size_hint: .15, 0.95
        pos: 0, -50
        pos_hint: {'top': 0.95}
        viewclass: 'SelectableLabel'
        SelectableRecycleBoxLayout:
            id: rv_layout
            default_size: None, dp(25)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(2)

    EditorTP:
        id: tp
        size_hint: .85, 1
        pos_hint: {'right': 1}
        do_default_tab: False

        on_current_tab: self.parent.on_tab_change(self.current_tab)
            
<SelectableRecycleBoxLayout>:
	id: test

<SelectableLabel>
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0.5, 0.5, 0.5, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    value: ''
    Label:
        text: root.value

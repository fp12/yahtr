#:kivy 1.10.0

<MainMenu>:
    FloatLayout:
        Label:
            text: 'Yet Another Hex Tactical RPG'
            pos_hint: {'center_x': .5, 'y': .75}
            size_hint: None, None
            halign: 'center'
            font_size: '50sp'
        Button:
            text: 'Custom Game'
            pos_hint: {'center_x': .33, 'y': .5}
            size: 120, 40
            size_hint: None, None
            halign: 'center'
            disabled: True
            #on_press: root.on_go_to_chess_demo()
        Button:
            text: 'Chess Demo'
            pos_hint: {'center_x': .5, 'y': .5}
            size: 120, 40
            size_hint: None, None
            halign: 'center'
            on_press: root.on_go_to_chess_demo()
        Button:
            text: 'Campaign'
            pos_hint: {'center_x': .66, 'y': .5}
            size: 120, 40
            size_hint: None, None
            halign: 'center'
            disabled: True
            #on_press: root.on_go_to_chess_demo()
        Button:
            text: 'Credits'
            pos_hint: {'right': 1, 'y': 0}
            size: 120, 25
            size_hint: None, None
            halign: 'center'
            on_press: root.manager.current = 'credits'
        Button:
            text: 'Quit'
            on_press: app.stop()
            pos: -50, -50
            pos_hint: {'right': 1, 'top': 1}
            size: 100, 25
            size_hint: None, None

#: import L_MENU_CHESS_DEMO yahtr.localization.ids.L_MENU_CHESS_DEMO
#: import L_MENU_FEATURES_DEMO yahtr.localization.ids.L_MENU_FEATURES_DEMO
#: import L_MENU_CAMPAIGN yahtr.localization.ids.L_MENU_CAMPAIGN
#: import L_MENU_EDITOR yahtr.localization.ids.L_MENU_EDITOR
#: import L_MENU_CREDITS yahtr.localization.ids.L_MENU_CREDITS
#: import L_MENU_QUIT yahtr.localization.ids.L_MENU_QUIT


<MainMenu>:
    FloatLayout:
        Label:
            text: 'Yet Another Hex Tactical RPG'
            pos_hint: {'center_x': .5, 'y': .75}
            size_hint: None, None
            halign: 'center'
            font_size: '50sp'
        Button:
            text: _(L_MENU_FEATURES_DEMO)
            pos_hint: {'center_x': .3, 'y': .5}
            size: 150, 40
            size_hint: None, None
            halign: 'center'
            on_press: app.go_to_features_demo()
        Button:
            text: _(L_MENU_CHESS_DEMO)
            pos_hint: {'center_x': .5, 'y': .5}
            size: 150, 40
            size_hint: None, None
            halign: 'center'
            on_press: app.go_to_chess_demo()
        Button:
            text: _(L_MENU_CAMPAIGN)
            pos_hint: {'center_x': .7, 'y': .5}
            size: 150, 40
            size_hint: None, None
            halign: 'center'
            disabled: True
            #on_press: app.go_to_chess_demo()
        Button:
            text: _(L_MENU_EDITOR)
            size: 120, 25
            pos: 0, 30
            pos_hint: {'right': 1}
            size_hint: None, None
            halign: 'center'
            on_press: app.go_to_editor()
        Button:
            text: _(L_MENU_CREDITS)
            pos_hint: {'right': 1, 'y': 0}
            size: 120, 25
            size_hint: None, None
            halign: 'center'
            on_press: app.go_to_credits()
        Button:
            text: _(L_MENU_QUIT)
            on_press: app.stop()
            pos: -50, -50
            pos_hint: {'right': 1, 'top': 1}
            size: 100, 25
            size_hint: None, None
